{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "EBSI Verifiable Attestation - Diploma",
    "description": "Design by BCdiploma for FR.EBSI - Schema of an EBSI Verifiable Attestation - Diploma",
    "type": "object",
    "properties": {
        "@context": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            }
        },
        "credentialSchema": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "type"
            ]
        },
        "credentialStatus": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "type"
            ]
        },
        "credentialSubject": {
            "type": "object",
            "properties": {
                "awardingOpportunity": {
                    "type": "object",
                    "properties": {
                        "awardingBody": {
                            "type": "object",
                            "properties": {
                                "eidasLegalIdentifier": {
                                    "type": "string"
                                },
                                "homepage": {
                                    "type": "string"
                                },
                                "id": {
                                    "type": "string"
                                },
                                "preferredName": {
                                    "type": "string"
                                },
                                "registration": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "eidasLegalIdentifier",
                                "id",
                                "preferredName",
                                "registration"
                            ]
                        },
                        "endedAtTime": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "id": {
                            "type": "string"
                        },
                        "identifier": {
                            "type": "string"
                        },
                        "location": {
                            "type": "string"
                        },
                        "startedAtTime": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    "required": [
                        "awardingBody",
                        "id",
                        "identifier"
                    ]
                },
                "dateOfBirth": {
                    "type": "string",
                    "format": "date"
                },
                "familyName": {
                    "type": "string"
                },
                "givenNames": {
                    "type": "string"
                },
                "gradingScheme": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "id"
                    ]
                },
                "id": {
                    "type": "string"
                },
                "identifier": {
                    "type": "string"
                },
                "learningAchievement": {
                    "type": "object",
                    "properties": {
                        "additionalNote": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "description": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "id",
                        "title"
                    ]
                },
                "learningSpecification": {
                    "type": "object",
                    "properties": {
                        "ectsCreditPoints": {
                            "type": "integer"
                        },
                        "eqfLevel": {
                            "type": "integer"
                        },
                        "id": {
                            "type": "string"
                        },
                        "iscedfCode": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "nqfLevel": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "required": [
                        "id",
                        "iscedfCode",
                        "nqfLevel"
                    ]
                }
            },
            "required": [
                "awardingOpportunity",
                "dateOfBirth",
                "familyName",
                "givenNames",
                "gradingScheme",
                "id",
                "identifier",
                "learningAchievement",
                "learningSpecification"
            ]
        },
        "evidence": {
            "type": "object",
            "properties": {
                "documentPresence": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "evidenceDocument": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "id": {
                    "type": "string"
                },
                "subjectPresence": {
                    "type": "string"
                },
                "type": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "verifier": {
                    "type": "string"
                }
            }
        },
        "expirationDate": {
            "type": "string",
            "format": "date-time"
        },
        "id": {
            "type": "string"
        },
        "issuanceDate": {
            "type": "string",
            "format": "date-time"
        },
        "issuer": {
            "type": "string"
        },
        "proof": {
            "type": "object",
            "properties": {
                "created": {
                    "type": "string",
                    "format": "date-time"
                },
                "jws": {
                    "type": "string"
                },
                "proofPurpose": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "verificationMethod": {
                    "type": "string"
                }
            },
            "required": [
                "created",
                "jws",
                "proofPurpose",
                "type",
                "verificationMethod"
            ]
        },
        "type": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "validFrom": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "@context",
        "credentialSchema",
        "credentialSubject",
        "id",
        "issuanceDate",
        "issuer",
        "proof",
        "type",
        "validFrom"
    ]
}
